{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["DOM", "ES2015"],
    "allowJs": false,
    "jsx": "react",
    "declarationMap": false,
    "declarationDir": "./dist",
    "outDir": "./dist",
    // "noEmit": true,
    // "noImplicitReturns": true,
    // "noImplicitThis": true,
    // "noImplicitAny": true,
    // "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strict": false
  },
  "include": ["src"],
  "exclude": ["dist", "node_modules", "src/*.spec.ts"]
}
