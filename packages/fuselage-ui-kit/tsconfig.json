{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "./src",
    "lib": ["dom", "es6"],
    "allowJs": false,
    "jsx": "react",
    "declarationMap": false,
    "outDir": "./dist",
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "resolveJsonModule": false
  },
  "exclude": ["node_modules", "dist"]
}
